@model Report
@{
    ViewData["Title"] = "Report";
}

<h2>Report Product</h2>

<form asp-action="Report" method="post">
    <input type="hidden" asp-for="ReportedItemId" />

   @*  <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" value="@Model?.Product?.Name" readonly />
    </div> *@

    <div class="form-group">
        <label asp-for="Reason"></label>
        <textarea asp-for="Reason" class="form-control" name="reason" rows="5"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Report</button>
        <a asp-action="Details" asp-route-id="@Model.ReportedItemId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}